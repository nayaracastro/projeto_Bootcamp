{% extends "layout.njk"%}

{% block content %}

    <header class="cardapio">
        <section class="receitas">

            <div class="cards">

                {% for item in items %}

                    <div class="card" id="{{item.id}}">

                        <div class="card_img">
                            <img src="img/cardapio/{{item.id}}" alt="burger">
                        </div>
                        <div class="card_titulo">
                            <h2>{{item.title}}</h2>
                        </div>
                        <div class="card_subtit">
                            <p>{{item.subtitle}}</p>
                        </div>

                    </div>

                {% endfor %}
            </div>

        </section>

    </header>
{% endblock %}